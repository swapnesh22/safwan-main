<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
		<!-- Temporary file which is for testing purpose -->
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:~/safwan</property>
        <property name="hibernate.connection.username">safwan</property>
        <property name="hibernate.connection.password">safwan</property>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="connection.autocommit">true</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="com.safwan.data.model.User"/>
        <mapping class="com.safwan.data.model.Category"/>
        <mapping class="com.safwan.data.model.SubCategory"/>
        <mapping class="com.safwan.data.model.Employee"/>
        <mapping class="com.safwan.data.model.PartyMaster"/>
        <mapping class="com.safwan.data.model.Calllog"/>
        <mapping class="com.safwan.data.model.Contract"/>
        <mapping class="com.safwan.data.model.SamplePost"/>
        <mapping class="com.safwan.data.model.SamplePostComment"/>
        
    </session-factory>
</hibernate-configuration>
